.sidepanels
  height 100%
  overflow hidden
  position relative

  &__content
    height 100%
    position relative
    z-index 1
    overflow auto
    styled-scrollbars()

    &_resizing
      position relative
      pointer-events none

      &::before
        top 0
        left 0
        content ""
        width 100%
        height 100%
        z-index 100
        display block
        position absolute

  &__wrapper
    --snap-rotation 90deg
    top 0
    z-index 10
    height 100%
    min-width 10px
    position absolute
    pointer-events none

    &_snap::before
      top 8px
      left 0
      bottom 8px
      z-index 10
      width 5px
      content ""
      display block
      position absolute
      background $accent_color

    &_align_left&_snap::before
      border-radius 0 4px 4px 0

    &_align_right&_snap::before
      border-radius 4px 0 0 4px

    &_align
      &_left
        left 0
        --snap-rotation -90deg

      &_right
        top 0
        right 0
        --snap-rotation 90deg

    ~/_collapsed &
      position static
      width 100%
      max-width auto
      min-width 100%

  &_collapsed
    height auto
    overflow visible
