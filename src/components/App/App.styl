.main-view
  flex 1
  z-index 1
  display flex
  position relative
  flex-direction column
  justify-content space-between

  &__annotation
    padding 1em

  &__infobar
    padding 6px 1em 7px
    font-size 14px
    color rgba(#000, 0.6)
    background-color var(--main-bg-color)
    border-top 1px solid rgba(#000, 0.1)
    position sticky
    bottom 0
    z-index 5

.key-group
  &__key
    padding 0 4px
    height 16px
    color #000
    display inline-flex
    align-items center
    background #FFFFFF
    border-radius 2px
    font-weight bold
    font-size 12px
    text-transform uppercase
    box-shadow 0px 0px 0px 1px rgba(0, 0, 0, 0.1), 0px 1px 0px rgba(0, 0, 0, 0.08)

  &__key + &__key
    margin-left 4px

  & + &
    margin-left 5px
