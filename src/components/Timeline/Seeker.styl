.seeker
  width 100%
  height 24px
  position relative

  &__track
    width 100%
    height 100%
    background #FAFAFA
    box-shadow inset 0px 1px 0px rgba(0, 0, 0, 0.1), inset 0px 0px 0px 1px rgba(0, 0, 0, 0.15)
    border-radius 3px

  &__indicator
    top 0
    left 0
    z-index 1
    width 100px
    height 24px
    max-width 100%
    position absolute
    border-radius 3px
    cursor col-resize
    box-shadow 0 0 0 1px #000, 0 0 0 1px #000 inset

  &__position
    top 0
    left 0
    width 1px
    z-index 2
    cursor grab
    height 100%
    position absolute
    background-color #000

    &::before
      top 0
      bottom 0
      left -5px
      right -5px
      content ''
      display block
      position absolute

    &:hover
      border-radius 30px
      box-shadow 0 0 0 3px rgba(#000, 0.2)

  &__minimap
    top 0
    left 0
    z-index 0
    width 100%
    height 100%
    position absolute
    pointer-events none
