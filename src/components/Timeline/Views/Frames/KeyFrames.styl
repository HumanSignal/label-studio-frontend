.keyframes
  margin 8px 0
  padding 8px 0
  transition background-color 100ms ease
  background-color rgba(#fff, 0)

  &__label
    left 0
    height 20px
    width min-content
    position sticky
    display flex

  &__name
    color #fff
    padding 0 6px
    display flex
    cursor pointer
    border-radius 4px
    width min-content
    color var(--color)
    font-size 13px
    line-height 16px
    align-items center
    background var(--background)
    box-shadow 0 0 0 1px var(--border) inset

  &__keypoints
    height 10px
    margin-top 2px
    position relative

  &__connection
    top 50%
    height 2px
    width 100%
    position absolute
    transform translateY(-50%)
    background-color var(--point-color)

    &_hidden
      opacity 0.4
      background-color transparent
      background repeating-linear-gradient(90deg, var(--point-color), var(--point-color) 2px, transparent 2px, transparent 4px)

  &__point
    top 50%
    width 6px
    height 6px
    position absolute
    border-radius 2px
    transform translate3d(-50%, -50%, 0) rotate(45deg)
    background-color var(--point-color)

  &__actions
    display flex

  &:hover
    background-color var(--hover)

.region-action
  margin 1px
  margin-left 2px
  height 18px
  min-width 18px
  cursor pointer
  border-radius 3px
  background #FFFFFF
  box-shadow 0px 1px 0px rgba(0, 0, 0, 0.1), 0px 0px 0px 1px rgba(0, 0, 0, 0.15)

  svg
    width 18px
    height 18px

  &_danger
    color $danger_color
