.keypoints
  height 24px
  display flex

  &__label
    left 0
    flex none
    width var(--offset)
    height 24px
    display flex
    z-index 2
    align-items center
    position sticky
    display flex

  &__name
    font-size 14px
    width min-content
    color var(--color)

  &__keypoints
    flex 1
    z-index 1
    height 10px
    margin-top 2px
    position relative

    &::before
      top -3px
      bottom -3px
      width 100%
      content ''
      display block
      position absolute
      cursor pointer
      z-index 3

  &__connection
    top 50%
    height 2px
    width 100%
    z-index 1
    position absolute
    transform translateY(-50%)
    background-color var(--point-color)

    &_hidden
      opacity 0.4
      background-color transparent
      background repeating-linear-gradient(90deg, var(--point-color), var(--point-color) 2px, transparent 2px, transparent 4px)

  &__point
    top 50%
    width 6px
    height 6px
    z-index 2
    position absolute
    border-radius 2px
    transform translate3d(-50%, -50%, 0) rotate(45deg)
    background-color var(--point-color)

  &__actions
    display flex

  &:hover
    background-color var(--hover)

.region-action
  margin 1px
  margin-left 2px
  height 18px
  min-width 18px
  cursor pointer
  border-radius 3px
  background #FFFFFF
  box-shadow 0px 1px 0px rgba(0, 0, 0, 0.1), 0px 0px 0px 1px rgba(0, 0, 0, 0.15)

  svg
    width 18px
    height 18px

  &_danger
    color $danger_color
