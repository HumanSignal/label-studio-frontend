.timeline-frames
  --frame-size 10px
  --view-size 0

  width 100%
  padding-top 4px
  min-height 120px
  position relative
  overflow hidden
  box-sizing content-box

  &__filler
    line-height 0
    min-width 100%
    white-space nowrap
    width var(--view-size)

    &::before
      content "\00a0\00a0"

  &__scroll
    z-index 1
    width 100%
    height 120px
    overflow hidden
    position relative
    border-top 1px solid rgba(#000, 0.1)
    background rgba(0,0,0,0.05)
    background-image repeating-linear-gradient(
      90deg,
      #fff,
      #fff var(--frame-width),
      transparent var(--frame-width),
      transparent calc(var(--frame-width) + 1)
    ), linear-gradient(0deg, #FAFAFA, transparent 50%)

  &__indicator
    top: 0
    left 0
    width var(--frame-size)
    height 5px
    z-index 2
    position absolute
    background-color #000

    &::before
      top -5px
      left -5px
      right -5px
      content ""
      bottom -5px
      display block
      cursor col-resize
      position absolute

    &::after
      top 100%
      left 0
      content ""
      width 100%
      height 120px
      display block
      position absolute
      pointer-events none
      background: linear-gradient(180deg, rgba(0, 0, 0, 0.15) -1.28%, rgba(0, 0, 0, 0.15) 69.21%, rgba(0, 0, 0, 0) 100%), rgba(#000, 0.05);

  &__hover
    left 0
    top 5px
    z-index 2
    width var(--frame-size)
    height 100%
    position absolute
    pointer-events none
    background-color rgba(#000, 0.1)

  &__keyframes
    width var(--view-size)
