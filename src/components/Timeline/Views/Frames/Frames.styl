.timeline-frames
  --frame-size 10px
  --view-size 0
  --view-height 140px

  width 100%
  padding-top 12px
  min-height var(--view-height)
  position relative
  overflow hidden
  box-sizing content-box

  &__controls
    height 0
    width 100%
    position relative

  &__filler
    min-width 100%
    height min-content
    white-space nowrap
    width var(--view-size)

  &__scroll
    z-index 1
    width 100%
    height var(--view-height)
    overflow hidden
    position relative
    border-top 1px solid rgba(#000, 0.1)
    background rgba(0,0,0,0.05)
    background-image repeating-linear-gradient(
      90deg,
      #fff,
      #fff var(--frame-width),
      transparent var(--frame-width),
      transparent calc(var(--frame-width) + 1)
    ), linear-gradient(0deg, #FAFAFA, transparent 50%)

  &__indicator
    left 0
    bottom 0
    width var(--frame-size)
    height 5px
    z-index 2
    position absolute
    background-color #000

    &::before
      top -5px
      left -5px
      right -5px
      content ""
      bottom -5px
      display block
      cursor col-resize
      position absolute

    &::after
      top 100%
      left 0
      content ""
      width 100%
      height var(--view-height)
      display block
      position absolute
      pointer-events none
      background: linear-gradient(180deg, rgba(0, 0, 0, 0.15) -1.28%, rgba(0, 0, 0, 0.15) 69.21%, rgba(0, 0, 0, 0) 100%), rgba(#000, 0.05);

  &__hover
    top 0
    left 0
    z-index 2
    width var(--frame-size)
    height var(--view-height)
    position absolute
    pointer-events none
    background-color rgba(#000, 0.1)

    &::before
      left: 50%
      height 12px
      bottom 100%
      color #fff
      display flex
      padding 0 4px
      min-width 100%
      font-size 10px
      align-items center
      justify-content center
      width min-content
      position absolute
      content attr(data-frame)
      transform translateX(-50%)
      background-color rgba(#000, 0.3)

  &__keyframes
    width var(--view-size)
