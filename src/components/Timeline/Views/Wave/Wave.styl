.wave
  --container-edge-padding 24px

  position relative
  user-select none

  &__loader
    top 0
    left 0
    z-index 10
    height 3px
    width 100%
    display flex
    opacity 0.4
    pointer-events none
    align-items center
    justify-content center
    position absolute
    border-radius 20px
    box-shadow 0 5px 20px rgba($accent_color, 0.2)

    waiting($accent_color)

    span
      display block
      padding 0 6px
      font-size 10px
      font-weight bold
      border-radius 10px
      background-color rgba(#fff, 0.5)

  &__wrapper
    height 100%
    display flex
    align-items stretch
    &_layout
      &_stack
        flex-direction column
        width 100%
        align-items flex-start
    &_edge
      &_relaxed
        background-color #FAFAFA

  &__scale
    flex none
    width 36px
    height 100%
    display flex
    align-items center
    justify-content center
    background-color #fff

  &__body
    flex 1
    position relative
    overflow hidden
    background-color #FAFAFA
    ~/_with-playhead &
      overflow revert
    ~/__wrapper_layout_stack &
      width 100%
    ~/__wrapper_edge_relaxed &
      margin-inline-start var(--container-edge-padding)

  &__cursor
    top 0
    left 150px
    width 2px
    height 100%
    z-index 10
    border-radius 2px
    position absolute
    pointer-events none
    background-color #000
    transform translate3d(-50%, 0, 0)
    ~/_with-playhead &
      border-radius 0
      top -8px
      height calc(100% + 8px)

  &__controls
    height 48px
    padding 0 6px
    display flex
    align-items center
    border-top 1px solid rgba(#000, 0.1)
    border-bottom 1px solid rgba(#000, 0.1)

  &__surfer
    height 88px

    showtitle div
      left 8px
      padding 0 8px
      border-radius 4px
      position relative
      background-color #fff
      box-shadow 0 4px 15px rgba(#000, 0.2)

  &__timeline
    bottom 0
    left 0
    width 100%
    height 24px
    position absolute
    pointer-events none
    ~/__wrapper_edge_relaxed &
      background-color #fff
      padding-inline-start var(--container-edge-padding)
    &_position
      &_outside
        height auto
        position relative
    &_placement
      &_bottom
        bottom 0
      &_top
        bottom revert
        top 0
