.controls
  flex 1
  height 100%
  display grid
  grid-auto-columns 1fr
  grid-auto-flow column
  justify-content flex-end

  &__tooltip-wrapper
    button
      width 100%

  &__skipped-info
    display flex
    // background-color rgba(221, 0, 0, 0.18)
    align-items center
    justify-content center
    font-weight 500
    font-size 16px

    svg
      margin 0 8px 0 4px

  .button
    height 100%
    font-size 16px
    box-shadow none
    border-radius 0
