.tool
  width 32px
  height 32px
  margin 4px
  display flex
  cursor pointer
  position relative
  align-items center
  justify-content center

  &__icon
    width 32px
    height 32px
    opacity 0.5

    svg
      width 100%
      height 100%

    ~/_active &,
    ~/:hover &,
    ~/:active &
      opacity 1

  &_active,
  &:active
    background rgba(#000, 0.1)
    box-shadow inset 0px 1px 0px rgba(#000, 0.05), inset 0px 0px 0px 1px rgba(#000, 0.05)
    border-radius 5px

  &__tooltip
    top 50%
    right calc(100% + 10px)
    padding 4px 10px
    display none
    font-size 12px
    align-items center
    position absolute
    border-radius 5px
    white-space nowrap
    user-select none
    font-weight 500
    font-size 14px
    color rgba(0, 0, 0, 0.4)
    background-color #fff
    transform translate3d(0, -50%, 0)
    box-shadow 0px 0px 0px 1px rgba(0, 0, 0, 0.05), 0px 5px 10px rgba(0, 0, 0, 0.1)

    ~/:hover &
      display flex
      color #000

    ~/_active &
      display none
      color #000

  &__controls
    top 50%
    display flex
    position absolute
    border-radius 5px
    background-color #fff
    right calc(100% + 10px)
    transform translate3d(0, -50%, 0)
    box-shadow 0px 0px 0px 1px rgba(0, 0, 0, 0.05), 0px 5px 10px rgba(0, 0, 0, 0.1)

  &__shortcut
    opacity 0.6
    display flex
    font-size 12px
    margin-left 20px
    font-weight bold
    color rgba(0, 0, 0, 0.6)

    ~/_active &,
    ~/:hover &
      opacity 1

  &__key
    padding 0 4px
    height 16px
    display flex
    align-items center
    background #FFFFFF
    border-radius 2px
    text-transform uppercase
    box-shadow 0px 0px 0px 1px rgba(0, 0, 0, 0.1), 0px 1px 0px rgba(0, 0, 0, 0.08)

  &__key + &__key
    margin-left 2px
