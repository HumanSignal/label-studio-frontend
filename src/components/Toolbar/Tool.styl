.tool
  width 32px
  height 32px
  margin 4px
  display flex
  cursor pointer
  position relative
  align-items center
  justify-content center

  &__icon
    width 32px
    height 32px
    opacity 0.5

    svg
      width 100%
      height 100%

    ~/_active &,
    ~/:hover &,
    ~/:active &
      opacity 1

  &_active,
  &:active
    background rgba(#000, 0.1)
    box-shadow inset 0px 1px 0px rgba(#000, 0.05), inset 0px 0px 0px 1px rgba(#000, 0.05)
    border-radius 5px

  &__tooltip
    top 50%
    right calc(100% + 10px)
    padding 4px 10px
    display flex
    display none
    font-size 12px
    position absolute
    border-radius 5px
    white-space nowrap
    background-color #fff
    transform translate3d(0, -50%, 0)
    box-shadow 0px 0px 0px 1px rgba(0, 0, 0, 0.05), 0px 5px 10px rgba(0, 0, 0, 0.1)

    ~/:hover &
      display flex

    ~/_active &
      display none
